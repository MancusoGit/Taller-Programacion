programa e3p4
procesos
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
areas
  areaR1: AreaP(1,1,1,100)
  areaR2: AreaP(2,1,2,100)
  areaR3: AreaP(3,1,3,100)
  areaRC: AreaP(100,100,100,100)
robots
  robot juntador1
  variables
    id,aux,calles: numero
  comenzar
    RecibirMensaje(id,rc)
    calles:=0
    mientras(PosCa<100)
      juntarPapeles
      mover
      calles:=calles+1
      si(calles=5)
        calles:=0
        EnviarMensaje(0,r2)
        EnviarMensaje(0,r3)      
        repetir 2
          RecibirMensaje(aux,*)
    juntarPapeles
  fin
  robot juntador2
  variables
    id,aux,calles: numero
  comenzar
    RecibirMensaje(id,rc)
    calles:=0
    mientras(PosCa<100)
      juntarPapeles
      mover
      calles:=calles+1
      si(calles=5)
        calles:=0
        EnviarMensaje(0,r3)
        EnviarMensaje(0,r1)      
        repetir 2
          RecibirMensaje(aux,*)
    juntarPapeles
  fin
  robot juntador3
  variables
    id,aux,calles: numero
  comenzar
    RecibirMensaje(id,rc)
    calles:=0
    mientras(PosCa<100)
      juntarPapeles
      mover
      calles:=calles+1
      si(calles=5)
        calles:=0
        EnviarMensaje(0,r1)
        EnviarMensaje(0,r2)      
        repetir 2
          RecibirMensaje(aux,*)
    juntarPapeles
  fin
  robot coordinador
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
variables
  r1: juntador1
  r2: juntador2
  r3: juntador3
  rc: coordinador
comenzar
  AsignarArea(rc,areaRC)
  AsignarArea(r1,areaR1)
  AsignarArea(r2,areaR2)
  AsignarArea(r3,areaR3)
  Iniciar(rc,100,100)
  Iniciar(r1,1,1)
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
fin
